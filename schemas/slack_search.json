{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Slack search parameters",
  "type": "object",
  "required": ["service", "query"],
  "properties": {
    "service": {"const": "slack"},
    "query": {"type": "string", "minLength": 1},
    "max_results": {"type": "integer", "minimum": 1, "maximum": 3},
    "channel": {"type": "string"},
    "before": {"type": "string"},
    "after": {"type": "string"}
  },
  "additionalProperties": true
}
